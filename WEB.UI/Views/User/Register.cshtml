@using Data.Domain.User
@model User

@{
    ViewBag.Title = "Register";
}

@{
    Layout = null;
    
}



<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/style.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap-datetimepicker.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/jqueryToast/css/toast.style.css" type="text/css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" type="text/css" rel="stylesheet" />
    <style>
        html {
            font-family: 'Lato', "PingFang SC", "Microsoft YaHei", sans-serif;  
        }
        .c {
            position: absolute;
            width: 500px;
            height: 800px;
            top: 50%;
            left: 50%;
            margin-top: -200px;
            margin-left: -250px;
            
        }
        h4 {
            font-size: 26px;
            font-weight: 400;
            line-height: 2;
        }
        .h {
            font-size: 26px;
        }

    </style>

   
</head>
<body>

    <div class="container">
        <div class="row">
            <div class="col-xs-4 c">
                <div class=" panel panel-primary">
                    <div class="panel-heading text-center h">Register</div>
                    @using (Html.BeginForm("Register", "User", null, FormMethod.Post, new { @class= "form-horizontal panel-body" }))
                    {
                        <div class="form-group">
                            <label class="col-xs-2 control-label" for="Name">Name</label>
                            <div class="col-xs-10">
                                @Html.TextBoxFor(c => c.Name, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-xs-2 control-label" for="Acount">Acount</label>
                            <div class="col-xs-10">
                                @Html.TextBoxFor(c => c.Acount, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-xs-2 control-label" for="password">Password</label>
                            <div class="col-xs-10">
                                @Html.TextBoxFor(c => c.password, new { @class = "form-control" })
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>


    <script src="~/Scripts/jquery-1.9.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/knockout-3.4.2.js"></script>
    <script src="~/Scripts/moment.min.js"></script>
    <script src="~/Scripts/moment-with-locales.min.js"></script>
    <script src="~/Scripts/bootstrap-datetimepicker.min.js"></script>
    <script src="https://cdn.ckeditor.com/4.7.3/standard/ckeditor.js"></script>
    <script src="~/Content/jqueryToast/js/toast.script.js"></script>
    <script src="~/Scripts/common.js"></script>
</body>
</html>